{
  "compilerOptions": {
    "outDir": "dist",
    "module": "esnext",
    "target": "es2021",
    "jsx": "react-jsx",
    "lib": ["dom", "es2021"],
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "strictNullChecks": false,
    // Lit 3.0 is expected to ship preliminary support for ECMAScript decorators
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
